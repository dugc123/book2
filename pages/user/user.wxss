/* pages/user/user.wxss */
.userinfo{
  display: flex;
  width:100%;
  height: 240rpx;
  background:rgb(95, 134, 206);
  border-bottom: 1px solid #bbb;
}
.userinfo-avatar{
  width:180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin: 20rpx 0 0 20rpx;
  overflow: hidden;
  display:block;
}
.userinfo-text{
  margin: 32rpx 0 0 28rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
  font-size: 34rpx;
}
.userinfo-name{
font-size: 42rpx;
margin-bottom: 20rpx;
font-weight: bold;
}
.user-text{
  background: rgb(95, 134, 206);
  font-size: 32rpx;
  justify-content: space-around;
  display: flex;
  color: #fff;
  height: 100rpx;
}
.collection,.attention{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  margin-top: 10rpx;
}
button{
  width:600rpx;
  height: 100rpx;
  border-radius: 30rpx;
  background: rgb(95, 134, 206);
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  margin: 30rpx auto;
}
image{
  position: relative;
  left: 0;
  right:  0;
  width:100%;
  height: 500rpx;
}